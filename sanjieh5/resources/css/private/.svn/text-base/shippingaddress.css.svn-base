body{
	background: #F6F6F6; 
	position: relative;
}
.address_details{
	font-size: 0.26rem;
	color: #282828;
	min-height: 0.9rem;
	height: auto;
	width: 100%;
	background: #FFFFFF;
	border-bottom: 1px solid #D4D4D4;
	margin-top: 0.14rem;
}
.address_details_p1{
	width: 100%;
	padding-top: 0.2rem; 
}
.address_details_p1 img{
	width: 0.2rem;
	height: 0.2rem;
	float: left;
	margin-left: 0.16rem;
	padding-top: 0.05rem;
}
.address_details_p1 span{
	margin-left: 0.16rem;
}
.address_details_p1 em{
	font-style: normal;
	margin-left: 0.6rem;
}
.address_details_p2{
	width: 100%;
	text-indent: 0.52rem;
	color: #848484;
	margin-top: 0.04rem;
	padding-bottom: 0.2rem;
}
.address_amend{
	width: 100%;
	height: 0.6rem;
	line-height: 0.6rem;
	background: #FFFFFF;
}
.address_amend a{
	float: right;
	font-size: 0.24rem;
	color: #282828; 
}
.address_amend a img{
	height: 0.24rem;
	margin-left: 0.5rem; 
	margin-top: -0.08rem;
}
.address_amend a span{
	height: 0.24rem;
	margin-left: 0.1rem; 
}
.address_amend .address_delete{
	margin-right: 0.3rem;
}
.address_amend .default_address{
	float: left;
	color: #f01c1c;
	margin-left: 0.3rem;
	font-size: 0.24rem;
}
.address_btn{
	margin-top: 0.8rem;
} 



/*删除框*/
.remove_background{
	width: 100%;
	height: 100%; 
	position: absolute;
	top: 0;
	background: rgba(0,0,0,0.6);
	z-index: 11;
}
.remove_box{
	position: absolute;
	width: 5.3rem;
	height: 2.6rem;
	top: 50%;
	margin-top: -1.3rem;
	left: 50%;
	margin-left: -2.6rem;
	background: #FFFFFF;
	z-index: 999;
	border-radius: 0.1rem;
}
.remove_box_content{
	width: 100%;
	text-align: center;
	height: 1.8rem;
	line-height: 1.8rem;
	font-size: 0.28rem;
	color: #282828;
	border-bottom: 1px solid #CCCCCC;
	box-sizing: border-box;
	border-radius: 0.1rem 0.1rem 0 0;
}
.remove_box_ul{
	width: 100%;
    height: 0.8rem;
    line-height: 0.8rem; 
}
.remove_box_ul li{
	float: left;
	font-size: 0.28rem;
	color: #282828;
    width: 50%;
    text-align: center;
    height: 0.8rem;
}
.remove_box_ul li:first-child{
	border-right: 1px solid #CCCCCC;
	box-sizing: border-box; 
	border-radius: 0 0 0 0.1rem;
}
.remove_box_ul li:nth-child(2){
	border-right: 1px solid #CCCCCC;
	box-sizing: border-box; 
	border-radius: 0 0 0.1rem 0;
}
.remove_box_ul .remove_box_ul_li{
	background: #F01C1C;
	color: #FFFFFF;
}
.delete_suc_kuang{
	display:none;
	position: absolute;
	top: 50%;
	margin-top: -0.5rem;
	left: 50%;
	margin-left: -1.5rem;
	width: 3rem;
    height: 1rem;  
    line-height: 1rem;
    font-size: 0.3rem; 
    text-align: center;
    color: #FFFFFF;
    background: rgba(1,1,1,0.5);
    border-radius: 2px; 
}




/*改*/
